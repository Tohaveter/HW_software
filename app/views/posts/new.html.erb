<h2>Регістрація команди</h2>
<%= form_for :post, url: posts_path do |f|%>
    <p>
    <br>
    Назва команди <br>
    <%= f.text_field(:name, {:class =>'form-control'}) %>
    </p>
    <p>
    Ім'я командира <br>
    <%= f.text_field(:email, {:class =>'form-control'}) %>
    </p>
    <p>
    Про команду <br>
    <%= f.text_area(:comment, {:class =>'form-control'}) %>
    </p>
    <p>
    <%= f.submit({:class =>'btn btn-success'}) %>
    </p>
    <% end %>

   